delete data
> db.users.remove({})
> db.users.remove({_id:1})

> db.users.update(
    {_id:1},
    {
        $set:{
           "restaurent_name":"Gulab",
            "cost":300,
            "name":"Nikita",
            "restaurent_id":1,
            "phone":86785478578,
            "date":"2021-27-03" 
